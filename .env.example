# Server Configuration
LISTEN_ADDR=:8080
ENABLE_TLS=false

# TLS/ACME Settings (for production with HTTPS)
# TLS_DOMAIN=feeds.example.com
# CLOUDFLARE_API_TOKEN=your_cloudflare_token_here
# CERT_CACHE_DIR=./.certmagic

# Storage Configuration
# Options: memory, valkey
STORAGE_TYPE=memory
VALKEY_ADDR=localhost:6379

# Authentication & Key Management
# Optional: External URL to fetch valid API keys (JSON array)
# KEY_PROVIDER_URL=https://example.com/api/active-keys
KEY_REFRESH_INTERVAL=10m
SQLITE_PATH=./kestrel.db
API_KEY_PREFIX=kestrel_

# Admin API Key (optional)
# Set this to allow IOC ingestion - only admin keys can ingest data
# Can also be set via CLI: kestrel -set-admin-key YOUR_KEY
# ADMIN_API_KEY=kestrel_your_admin_key_here

# Validation Settings
ENABLE_VALIDATION=true

# Example: For production with Valkey and external key provider
# STORAGE_TYPE=valkey
# VALKEY_ADDR=valkey:6379
# KEY_PROVIDER_URL=https://mysite.com/api/subscribers
# ENABLE_TLS=true
# TLS_DOMAIN=feeds.mysite.com
# CLOUDFLARE_API_TOKEN=your_token
